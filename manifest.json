{
  "id": "wealthfolio-inflation",
  "name": "Wealthfolio Inflation",
  "version": "1.0.0",
  "description": "A Wealthfolio addon for comparing portfolio with inflation",
  "author": "Cloudburst",
  "main": "dist/addon.js",
  "sdkVersion": "1.0.0",
  "enabled": true,
  "permissions": [
    {
      "category": "ui",
      "functions": ["sidebar.addItem", "router.add"],
      "purpose": "Register navigation entry and route for the inflation page"
    },
    {
      "category": "accounts",
      "functions": ["getAll"],
      "purpose": "List accounts for portfolio selection"
    },
    {
      "category": "portfolio",
      "functions": ["getHistoricalValuations"],
      "purpose": "Load valuation history for inflation comparison"
    },
    {
      "category": "settings",
      "functions": ["get"],
      "purpose": "Read base currency for display"
    }
  ],
  "keywords": ["wealthfolio", "addon"],
  "license": "MIT"
}
